<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="349dp"
        android:layout_height="165dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Mente" />

    <!-- FormulÃ¡rio em LinearLayout (corrigido) -->
    <LinearLayout
        android:id="@+id/meuFrameLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_shape_rounded"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_thin"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textFontWeight="900"
            android:layout_marginLeft="150dp"/>

        <!-- Label Email -->
        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_thin"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textFontWeight="900"/>

        <!-- Input Email -->
        <EditText
            android:id="@+id/emailinput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Digite seu email"
            android:background="@drawable/bg_inputtext_rounded"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Label Senha -->
        <TextView
            android:id="@+id/senhatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_thin"
            android:text="Senha"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textFontWeight="900"/>

        <!-- Input Senha -->
        <EditText
            android:id="@+id/senhainput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Digite sua senha"
            android:background="@drawable/bg_inputtext_rounded"
            android:inputType="textPassword"
            android:padding="12dp" />

        <TextView
            android:id="@+id/cadastrotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_thin"
            android:text="cadastre-se"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textFontWeight="900"
            android:layout_marginLeft="120dp"/>

        <Button
            android:id="@+id/buttonLogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logar"
            android:textColor="@color/white"
            android:backgroundTint="@color/azul_escuro"
            android:layout_marginTop="16dp"

            />
    </LinearLayout>

    <!-- Texto inferior -->

    <TextView
        android:id="@+id/apoiotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/poppins_thin"
        android:text="O Apoio que o"
        android:textColor="@color/azul_escuro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textFontWeight="900"/>

    <TextView
        android:id="@+id/JovemPrecisatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/poppins_thin"
        android:text="Jovem Precisa"
        android:textColor="@color/azul_escuro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textFontWeight="900"/>

</androidx.constraintlayout.widget.ConstraintLayout>
