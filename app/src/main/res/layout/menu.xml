<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"
    tools:context=".MainActivity">

    <!-- Botão de fundo do menu -->
    <Button
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/menu_fundo"
        android:text="."
        android:textColor="@color/azul_escuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>


    <!-- Home Button -->
    <Button
        android:id="@+id/homebtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/menu_azul"
        android:text="."
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"/>

    <!-- Home Icon -->
    <ImageView
        android:id="@+id/homeimg"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@+id/homebtn"
        app:layout_constraintStart_toStartOf="@+id/homebtn"
        app:layout_constraintEnd_toEndOf="@+id/homebtn"
        android:layout_marginBottom="10dp" />

    <!-- Diário Button -->
    <Button
        android:id="@+id/diariobtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/menu_azul"
        android:text="."
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp" />

    <!-- Edit Icon -->
    <ImageView
        android:id="@+id/editimg"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="@+id/diariobtn"
        app:layout_constraintStart_toStartOf="@+id/diariobtn"
        app:layout_constraintEnd_toEndOf="@+id/diariobtn"
        android:layout_marginBottom="10dp" />

    <!-- Menu Button -->
    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/menu_azul"
        android:text="."
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="40dp"/>

    <!-- Menu Icon -->
    <ImageView
        android:id="@+id/menuimg"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
